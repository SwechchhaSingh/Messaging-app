from django.shortcuts import render, render_to_response
from django.http import HttpResponse, HttpResponseRedirect
from django.contrib.auth import authenticate, login, logout, get_user_model
from django.views import generic

def index(request):
    return HttpResponse("Hello, world. You're at the conversation index.")
    # return HttpResponseRedirect('conversation:login' % request.path)

def login_user(request):
    state = "Please log in below..."
    email = password = ''
    {% crsf token %}
    if request.POST:
        email = request.POST.get('email')
        password = request.POST.get('password')

        user = authenticate(email=email, password=password)
        if user is not None:
            if user.is_active:
                login(request, user)
                state = "You're successfully logged in!"
            else:
                state = "Your account is not active, please contact the site admin."
        else:
            state = "Your email and/or password were incorrect."

    return render_to_response('conversation/login_form.html',{'state':state, 'email': email})

def logout_user(request):
    logout(request)
    return HttpResponseRedirect('/conversation/index/')
